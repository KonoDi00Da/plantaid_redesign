<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Identify.IdentifyHistoryFragment">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:rippleColor="@android:color/transparent"
        android:backgroundTint="@color/trans_black"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:tintMode="@color/white"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabCustomSize="40dp"
        app:pressedTranslationZ="0dp" />

    <TextView
        android:id="@+id/com_plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sci_plant"
        android:text="Identified plants"
        android:layout_marginStart="30dp"
        android:textColor="@color/dark_green_2" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/sci_plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_back"
        android:text="History"
        android:textSize="25sp"
        android:fontFamily="@font/merriweather_bold"
        android:layout_marginStart="30dp"
        android:textColor="@color/dark_green"/>

    <androidx.recyclerview.widget.RecyclerView
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:clipToPadding="false"
        android:id="@+id/identifyResults"
        android:layout_below="@+id/com_plant"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/com_plant"
        android:background="@drawable/feather_effect" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/leaves_bg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>



</RelativeLayout>