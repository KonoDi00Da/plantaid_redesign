<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Settings.SettingsFragment">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/leaves_bg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/btnNavDrawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:src="@drawable/ic_tab" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/transparent_bg"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Settings"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/merriweather_bold"
                android:textColor="@color/dark_green"
                android:textSize="30sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAboutUs"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/about_us12"
                android:textAllCaps="false"
                android:paddingStart="30dp"
                android:textAlignment="textStart"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/dark_green"
                android:background="@drawable/btn_rounded_2"
                android:backgroundTint="@color/light_green"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/termsUse"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Terms of Agreement"
                android:paddingStart="30dp"
                android:textAlignment="textStart"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:textColor="@color/dark_green"
                android:background="@drawable/btn_rounded_2"
                android:backgroundTint="@color/light_green"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHelp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="More Help"
                android:textAllCaps="false"
                android:paddingStart="30dp"
                android:textAlignment="textStart"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/dark_green"
                android:background="@drawable/btn_rounded_2"
                android:backgroundTint="@color/light_green"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPolicy"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Privacy Policy"
                android:paddingStart="30dp"
                android:textAlignment="textStart"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:textColor="@color/dark_green"
                android:background="@drawable/btn_rounded_2"
                android:backgroundTint="@color/light_green"/>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Logout"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="30dp"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_green"
                    android:background="@drawable/btn_rounded_2"
                    android:backgroundTint="@color/light_green"/>

                <ImageView
                    android:elevation="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_login_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentTop="true"
                    app:tint="@color/dark_green" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>